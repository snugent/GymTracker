<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    >

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/mainHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/card_padding_standard">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/list_image_width"
            android:layout_height="@dimen/list_image_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/card_padding_standard"
            android:background="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivIcon"
            android:textSize="@dimen/card_font_primary" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading"
            android:layout_toEndOf="@+id/ivIcon"
            android:textSize="@dimen/card_font_secondary" />
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading"
            android:layout_toEndOf="@+id/ivIcon"
            android:textSize="@dimen/card_font_secondary" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/card_delete_button_width"
            android:layout_height="@dimen/card_delete_button_height"
            app:srcCompat="@android:drawable/ic_delete" />


    </RelativeLayout>

</android.support.v7.widget.CardView>