<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin1.gymtracker.activities.ExerciseEntry">

    <Spinner
        android:id="@+id/spnType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseName"
        android:layout_below="@+id/etExerciseName"
        android:layout_alignStart="@+id/etExerciseName" />

    <EditText
        android:id="@+id/etExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/exercise_name"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxLines="1" />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/save"
        android:layout_below="@+id/spnType"
        android:layout_alignStart="@+id/spnType" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_alignBaseline="@+id/btnSave"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_toEndOf="@+id/btnSave"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/btnObjectives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/btnCancel"
        android:text="@string/btn_objectives" />

</android.widget.RelativeLayout>
