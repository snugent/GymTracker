<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin1.gymtracker.activities.WorkoutHeadEntry"
    android:background="@color/container_background_color">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/container_background_color">

        <android.widget.RelativeLayout
            android:id="@+id/frameTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/workout_date"
                android:textSize="@dimen/entry_font_size_height"
                android:layout_alignTop="@+id/ivDate"
                android:layout_toStartOf="@+id/ivDate" />

            <EditText
                android:id="@+id/etWorkoutComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvDate"
                android:layout_below="@+id/tvDate"
                android:layout_marginTop="@dimen/card_padding_standard"
                android:ems="10"
                android:hint="@string/comment"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:paddingTop="@dimen/card_padding_standard" />

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginTop="@dimen/card_padding_standard"
                android:paddingTop="@dimen/card_padding_top"
                android:src="@drawable/ic_date_range_24px"
                tools:backgroundTint="@color/white" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnSave"
                android:layout_alignBottom="@+id/btnSave"
                android:layout_alignEnd="@+id/etWorkoutComment"
                android:paddingTop="@dimen/card_padding_standard"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/etWorkoutComment"
                android:layout_below="@+id/etWorkoutComment"
                android:layout_marginTop="@dimen/card_padding_standard"
                android:paddingTop="@dimen/card_padding_standard"
                android:text="@string/save" />

        </android.widget.RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            tools:listitem="@layout/item" />

    </android.widget.LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/float_image_width"
        android:layout_height="@dimen/float_image_height"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add" />

</android.support.design.widget.CoordinatorLayout>
